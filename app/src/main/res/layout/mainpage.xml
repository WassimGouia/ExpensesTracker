<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bckgrd"
        android:scaleType="centerCrop"
        />

    <!-- Monthly money spent section -->
    <TextView
        android:id="@+id/monthly_money_spent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_month_spendings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/monthly_money_spent_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monthly_money_spent_value"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_below="@+id/monthly_money_spent_title" />

    <!-- Latest 3 items section -->
    <TextView
        android:id="@+id/latest_items_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latest_items_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_below="@+id/monthly_money_spent_value" />
    <LinearLayout
        android:id="@+id/latest_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@+id/latest_items_title" />

    <!-- Show more history button -->
    <Button
        android:id="@+id/show_more_history_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="89dp"
        android:text="@string/show_more_history_button_text" />
</RelativeLayout>
